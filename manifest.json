{
  "manifest_version": 3,
  "name": "YouTube Video Summarizer",
  "version": "2.0.0",
  "description": "Summarize YouTube videos instantly with Google Gemini 2.5 Flash",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch*",
        "https://youtube.com/watch*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Summarize YouTube Video"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}